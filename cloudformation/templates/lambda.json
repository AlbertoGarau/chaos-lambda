{
    "Description": "CloudFormation template for the Lambda Monkey",
    "Outputs": {
        "LambdaMonkeyFunctionOutput": {
            "Description": "The Lambda Monkey Function",
            "Value": {
                "Ref": "LambdaMonkeyFunction"
            }
        }
    },
    "Parameters": {
        "S3Bucket": {
            "Description": "S3Bucket Parameter",
            "Type": "String"
        },
        "S3Key": {
            "Description": "S3Key Parameter",
            "Type": "String"
        }
    },
    "Resources": {
        "LambdaMonkeyFunction": {
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "S3Bucket"
                    },
                    "S3Key": {
                        "Ref": "S3Key"
                    }
                },
                "Description": "CloudFormation Lambda",
                "Handler": "lmonkey.handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaMonkeyRole",
                        "Arn"
                    ]
                },
                "Runtime": "python2.7",
                "Timeout": 30
            },
            "Type": "AWS::Lambda::Function"
        },
        "LambdaMonkeyRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Path": "/lambda/",
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "logs:*"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:logs:*:*:*"
                                },
                                {
                                    "Action": [
                                        "ses:SendEmail",
                                        "ec2:TerminateInstances",
                                        "autoscaling:DescribeAutoScalingGroups"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "LambdaMonkeyPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        }
    }
}
